<script>
document.addEventListener('DOMContentLoaded', function() {
  // Real-time Business Status System
  function updateBusinessStatus() {
    const now = new Date();
    const currentDay = now.getDay(); // 0 = Sunday, 1 = Monday, etc.
    const currentTime = now.getHours() * 60 + now.getMinutes(); // Minutes since midnight
    
    const statusElement = document.getElementById('business-status');
    const statusText = document.getElementById('status-text');
    const statusDot = statusElement?.querySelector('.status-dot');
    
    if (!statusElement || !statusText || !statusDot) return;
    
    let isOpen = false;
    let nextChange = '';
    
    // Business Hours: Monday-Saturday 9:30-13:00 and 17:00-20:30, Sunday closed
    if (currentDay >= 1 && currentDay <= 6) { // Monday to Saturday
      const morning = currentTime >= 570 && currentTime < 780; // 9:30-13:00
      const afternoon = currentTime >= 1020 && currentTime < 1230; // 17:00-20:30
      isOpen = morning || afternoon;
      
      if (currentTime < 570) nextChange = 'Apre alle 9:30';
      else if (currentTime >= 570 && currentTime < 780) nextChange = 'Chiude alle 13:00';
      else if (currentTime >= 780 && currentTime < 1020) nextChange = 'Riapre alle 17:00';
      else if (currentTime >= 1020 && currentTime < 1230) nextChange = 'Chiude alle 20:30';
      else nextChange = 'Apre domani alle 9:30';
    } else { // Sunday
      isOpen = false;
      nextChange = 'Apre luned√¨ alle 9:30';
    }
    
    // Update UI
    if (isOpen) {
      statusText.textContent = 'Aperto ora';
      statusElement.className = 'status-indicator open';
      statusDot.style.background = '#2ecc71';
      statusDot.style.boxShadow = '0 0 10px rgba(46, 204, 113, 0.5)';
    } else {
      statusText.textContent = 'Chiuso';
      statusElement.className = 'status-indicator closed';
      statusDot.style.background = '#e74c3c';
      statusDot.style.boxShadow = '0 0 10px rgba(231, 76, 60, 0.5)';
    }
    
    // Add next change info
    const existingNextChange = statusElement.querySelector('.next-change');
    if (existingNextChange) existingNextChange.remove();
    
    const nextChangeElement = document.createElement('span');
    nextChangeElement.className = 'next-change';
    nextChangeElement.textContent = nextChange;
    nextChangeElement.style.cssText = `
      font-size: 0.7rem;
      color: rgba(255, 255, 255, 0.7);
      margin-left: 10px;
      font-weight: 400;
    `;
    statusElement.appendChild(nextChangeElement);
  }
  
  // Contact Button Loading States
  function addLoadingStates() {
    const actionButtons = document.querySelectorAll('.action-button');
    
    actionButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        const target = e.currentTarget;
        const mouseEvent = e;
        if (target && target.href && (target.href.includes('tel:') || target.href.includes('mailto:'))) {
          // Don't prevent default for tel/mailto links, just add visual feedback
          target.style.transform = 'scale(0.95)';
          setTimeout(() => {
            target.style.transform = '';
          }, 150);
        }
        
        // Add ripple effect
        const ripple = document.createElement('span');
        const rect = target.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = mouseEvent.clientX - rect.left - size / 2;
        const y = mouseEvent.clientY - rect.top - size / 2;
        
        ripple.style.cssText = `
          position: absolute;
          width: ${size}px;
          height: ${size}px;
          left: ${x}px;
          top: ${y}px;
          background: rgba(255, 255, 255, 0.3);
          border-radius: 50%;
          transform: scale(0);
          animation: ripple 0.6s linear;
          pointer-events: none;
        `;
        
        target.appendChild(ripple);
        
        setTimeout(() => {
          ripple.remove();
        }, 600);
      });
    });
  }
  
  // Social Links Analytics
  function trackSocialInteractions() {
    const socialLinks = document.querySelectorAll('.social-link');
    
    socialLinks.forEach(link => {
      link.addEventListener('click', function() {
        const platform = this.href.includes('facebook') ? 'Facebook' : 
                        this.href.includes('instagram') ? 'Instagram' : 'TikTok';
        
        // Visual feedback
        this.style.transform = 'translateX(15px) scale(1.05)';
        setTimeout(() => {
          this.style.transform = '';
        }, 300);
        
        // Could add analytics tracking here
        console.log(`Social interaction: ${platform}`);
      });
    });
  }
  
  // Initialize all enhancements
  updateBusinessStatus();
  addLoadingStates();
  trackSocialInteractions();
  
  // Update business status every minute
  setInterval(updateBusinessStatus, 60000);
  
  // Add CSS for ripple animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes ripple {
      to {
        transform: scale(4);
        opacity: 0;
      }
    }
    
    .status-indicator.closed .status-dot {
      background: #e74c3c !important;
      animation: pulse-red 2s infinite;
    }
    
    @keyframes pulse-red {
      0%, 100% {
        transform: scale(1);
        opacity: 1;
      }
      50% {
        transform: scale(1.2);
        opacity: 0.7;
      }
    }
  `;
  document.head.appendChild(style);
});
</script>
