<style>
  .contact-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #000 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 30% 20%, rgba(255, 215, 0, 0.06) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(212, 175, 55, 0.04) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 300;
    background: linear-gradient(135deg, #ffd700 0%, #ddbb76 50%, #ffd700 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    animation: shimmerText 6s var(--ease-luxury) infinite;
    filter: drop-shadow(0 0 10px rgba(255, 215, 0, 0.3));
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 500px;
    margin: 0 auto;
    font-weight: 300;
  }

  @keyframes shimmerText {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Grid Layout */
  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 60px;
    align-items: start;
  }

  /* Contact Methods */
  .contact-methods {
    display: grid;
    gap: 30px;
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 20px;
    padding: 30px;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 20px;
    transition: all 0.5s var(--ease-luxury);
    position: relative;
    overflow: hidden;
  }

  .contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.05), transparent);
    transition: left 0.8s var(--ease-luxury);
  }

  .contact-card:hover::before {
    left: 100%;
  }

  .contact-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: rgba(255, 215, 0, 0.4);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 8px 20px rgba(255, 215, 0, 0.2);
  }

  /* WhatsApp Card Special */
  .whatsapp-card {
    border-color: rgba(37, 211, 102, 0.3);
    background: rgba(37, 211, 102, 0.05);
  }

  .whatsapp-card:hover {
    border-color: rgba(37, 211, 102, 0.5);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 8px 20px rgba(37, 211, 102, 0.3);
  }

  /* Card Elements */
  .card-icon {
    width: 60px;
    height: 60px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(45deg, #ffd700, #ddbb76);
    color: #1a1a1a;
    transition: all 0.4s var(--ease-luxury);
    box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
  }

  .whatsapp-card .card-icon {
    background: linear-gradient(45deg, #25d366, #128c7e);
    color: white;
    box-shadow: 0 8px 20px rgba(37, 211, 102, 0.3);
  }

  .phone-card .card-icon {
    background: linear-gradient(45deg, #3498db, #2980b9);
    color: white;
    box-shadow: 0 8px 20px rgba(52, 152, 219, 0.3);
  }

  .email-card .card-icon {
    background: linear-gradient(45deg, #9b59b6, #8e44ad);
    color: white;
    box-shadow: 0 8px 20px rgba(155, 89, 182, 0.3);
  }

  .contact-card:hover .card-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .card-content h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffd700;
    margin-bottom: 5px;
    text-shadow: 0 0 6px rgba(255, 215, 0, 0.3);
  }

  .whatsapp-card .card-content h3 {
    color: #25d366;
    text-shadow: 0 0 6px rgba(37, 211, 102, 0.3);
  }

  .card-content p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    margin-bottom: 8px;
  }

  .contact-value {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
  }

  .card-action {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 12px;
    color: #ffd700;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s var(--ease-luxury);
    white-space: nowrap;
  }

  .whatsapp-card .card-action {
    background: rgba(37, 211, 102, 0.1);
    border-color: rgba(37, 211, 102, 0.3);
    color: #25d366;
  }

  .phone-card .card-action {
    background: rgba(52, 152, 219, 0.1);
    border-color: rgba(52, 152, 219, 0.3);
    color: #3498db;
  }

  .email-card .card-action {
    background: rgba(155, 89, 182, 0.1);
    border-color: rgba(155, 89, 182, 0.3);
    color: #9b59b6;
  }

  .card-action:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
  }

  .whatsapp-card .card-action:hover {
    box-shadow: 0 8px 20px rgba(37, 211, 102, 0.4);
  }

  .phone-card .card-action:hover {
    box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
  }

  .email-card .card-action:hover {
    box-shadow: 0 8px 20px rgba(155, 89, 182, 0.4);
  }

  /* Store Info */
  .store-info {
    display: grid;
    gap: 30px;
  }

  .info-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 215, 0, 0.15);
    border-radius: 16px;
    padding: 25px;
    transition: all 0.4s var(--ease-luxury);
  }

  .info-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 215, 0, 0.25);
    transform: translateY(-3px);
  }

  .info-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .info-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.2), rgba(212, 175, 55, 0.1));
    border: 1px solid rgba(255, 215, 0, 0.3);
    color: #ffd700;
  }

  .info-header h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #ffd700;
    text-shadow: 0 0 6px rgba(255, 215, 0, 0.3);
  }

  .info-content {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  /* Location Specific */
  .store-locations {
    margin-bottom: 20px;
  }

  .store-location {
    margin-bottom: 16px;
  }

  .store-location:last-child {
    margin-bottom: 0;
  }

  .store-type {
    color: #ffd700;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 8px;
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.3);
  }

  .store-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.3), transparent);
    margin: 16px 0;
  }



  .address {
    margin-bottom: 12px;
  }

  .store-directions-btn {
    background: rgba(255, 215, 0, 0.15);
    border: 1px solid rgba(255, 215, 0, 0.4);
    border-radius: 8px;
    padding: 8px 16px;
    color: #ffd700;
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s var(--ease-luxury);
    display: flex;
    align-items: center;
    gap: 6px;
    backdrop-filter: blur(10px);
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.3);
  }

