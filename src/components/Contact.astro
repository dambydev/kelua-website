<style>
  .contact-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #000 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, #d4af37 0%, #f1c40f 50%, #d4af37 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    position: relative;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    border-radius: 2px;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.5);
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    margin-bottom: 80px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .location-card,
  .hours-card {
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.8), rgba(0, 0, 0, 0.8));
    border: 2px solid rgba(212, 175, 55, 0.3);
    border-radius: 20px;
    padding: 35px;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .location-card::before,
  .hours-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #d4af37, #f1c40f, #d4af37);
    background-size: 200% 100%;
    animation: shine 2s linear infinite;
  }

  @keyframes shine {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  .info-card {
    display: flex;
    align-items: flex-start;
    gap: 20px;
  }

  .info-card .icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1a1a1a;
    box-shadow: 0 8px 32px rgba(212, 175, 55, 0.3);
  }

  .info-content h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #d4af37;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
  }

  .info-content p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin: 0;
    font-size: 1.1rem;
  }

  .contact-actions {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .contact-btn {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 28px;
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.9), rgba(0, 0, 0, 0.9));
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    text-decoration: none;
    color: white;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .contact-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s ease;
  }

  .contact-btn:hover::before {
    left: 100%;
  }

  .contact-btn:hover {
    transform: translateY(-4px);
    border-color: rgba(212, 175, 55, 0.5);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .btn-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .phone-btn .btn-icon {
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    color: #1a1a1a;
  }

  .email-btn .btn-icon {
    background: linear-gradient(45deg, #6c63ff, #5a52d5);
    color: white;
  }

  .whatsapp-btn .btn-icon {
    background: linear-gradient(45deg, #25d366, #128c7e);
    color: white;
  }

  .btn-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .btn-label {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 4px;
    color: white;
  }

  .btn-number {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    font-family: 'Courier New', monospace;
  }

  .whatsapp-btn.featured {
    background: linear-gradient(145deg, rgba(37, 211, 102, 0.15), rgba(18, 140, 126, 0.15));
    border-color: rgba(37, 211, 102, 0.4);
    position: relative;
  }

  .whatsapp-btn.featured:hover {
    border-color: #25d366;
    background: linear-gradient(145deg, rgba(37, 211, 102, 0.25), rgba(18, 140, 126, 0.25));
  }

  .whatsapp-pulse {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 20px;
    height: 20px;
    background: #25d366;
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.3);
      opacity: 0.7;
    }
  }

  .contact-info-secondary {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .schedule {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .schedule-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .schedule-item:last-child {
    border-bottom: none;
  }

  .day {
    font-weight: 600;
    color: #d4af37;
  }

  .hours {
    text-align: right;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
  }

  .hours.closed {
    color: #e74c3c;
    font-weight: 500;
  }

  .social-section {
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.8), rgba(0, 0, 0, 0.8));
    border: 2px solid rgba(212, 175, 55, 0.3);
    border-radius: 20px;
    padding: 35px;
    text-align: center;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .social-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #d4af37, #f1c40f, #d4af37);
    background-size: 200% 100%;
    animation: shine 2s linear infinite;
  }

  .social-section h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #d4af37;
    margin-bottom: 25px;
    letter-spacing: 0.5px;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    border-radius: 16px;
    color: #1a1a1a;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(212, 175, 55, 0.3);
  }

  .social-link:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 12px 40px rgba(212, 175, 55, 0.4);
  }

  .map-container {
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.8), rgba(0, 0, 0, 0.8));
    border: 2px solid rgba(212, 175, 55, 0.3);
    border-radius: 24px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    position: relative;
  }

  .map-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #d4af37, #f1c40f, #d4af37);
    background-size: 200% 100%;
    animation: shine 2s linear infinite;
    z-index: 1;
  }

  .map-placeholder {
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
  }

  .map-placeholder:hover {
    color: white;
    background: rgba(212, 175, 55, 0.1);
  }

  .map-icon {
    color: #d4af37;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  .map-placeholder:hover .map-icon {
    transform: scale(1.1);
    color: #f1c40f;
  }

  .map-placeholder p {
    font-weight: 600;
    margin: 0 0 8px 0;
    font-size: 1.2rem;
  }

  .map-placeholder small {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .contact-section {
      padding: 80px 0;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .location-card,
    .hours-card,
    .social-section {
      padding: 25px;
    }

    .contact-btn {
      padding: 20px 24px;
    }

    .btn-icon {
      width: 45px;
      height: 45px;
    }

    .btn-label {
      font-size: 1rem;
    }

    .btn-number {
      font-size: 0.9rem;
    }

    .map-placeholder {
      height: 250px;
    }

    .social-links {
      gap: 15px;
    }

    .social-link {
      width: 55px;
      height: 55px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1rem;
    }

    .location-card,
    .hours-card,
    .social-section {
      padding: 20px;
    }

    .contact-btn {
      padding: 18px 20px;
      gap: 16px;
    }

    .btn-icon {
      width: 40px;
      height: 40px;
    }

    .info-card .icon {
      width: 50px;
      height: 50px;
    }

    .info-content h3 {
      font-size: 1.2rem;
    }

    .social-section h3 {
      font-size: 1.2rem;
    }

    .social-link {
      width: 50px;
      height: 50px;
    }
  }
</style>
