<script>
	// Service Cards Animation Observer
	function initServiceAnimations() {
		const serviceCards = document.querySelectorAll('.service-item.scroll-animate');
		
		const observer = new IntersectionObserver((entries) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
					// Add visible class with a small delay for smoother effect
					setTimeout(() => {
						entry.target.classList.add('visible');
					}, 100);
					observer.unobserve(entry.target);
				}
			});
		}, {
			threshold: 0.2,
			rootMargin: '50px 0px -50px 0px'
		});

		serviceCards.forEach((card) => {
			observer.observe(card);
		});
	}

	// Enhanced hover effects for service cards
	function initServiceHoverEffects() {
		const serviceItems = document.querySelectorAll('.service-item');
		
		serviceItems.forEach((item) => {
			item.addEventListener('mouseenter', () => {
				// Add ripple effect
				const ripple = document.createElement('div');
				ripple.className = 'service-ripple';
				item.appendChild(ripple);
				
				// Remove ripple after animation
				setTimeout(() => {
					if (ripple.parentNode) {
						ripple.parentNode.removeChild(ripple);
					}
				}, 600);
			});
		});
	}

	// Initialize when DOM is loaded
	document.addEventListener('DOMContentLoaded', () => {
		initServiceAnimations();
		initServiceHoverEffects();
	});

	// Reinitialize on Astro page navigation
	document.addEventListener('astro:page-load', () => {
		initServiceAnimations();
		initServiceHoverEffects();
	});
</script>
