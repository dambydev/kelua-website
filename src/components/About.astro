<style>
	.about-section {
		padding: 100px 0;
		background: var(--dark-gradient);
		position: relative;
		scroll-margin-top: 120px;
	}

	.about-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(ellipse at top, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
		pointer-events: none;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
		position: relative;
		z-index: 2;
	}

	.about-section .section-title {
		font-family: 'Glida Display Regular', 'Playfair Display', serif;
		font-size: 4rem;
		font-weight: 300;
		background: linear-gradient(135deg, #ffd700 0%, #d4af37 40%, #f1c40f 60%, #ffeb3b 100%);
		background-size: 300% 300%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 0 30px rgba(255, 215, 0, 0.4);
		letter-spacing: 3px;
		margin-bottom: 30px;
		position: relative;
		display: inline-block;
		animation: shimmer-title 4s ease-in-out infinite, float-title 6s ease-in-out infinite;
		filter: drop-shadow(0 4px 15px rgba(212, 175, 55, 0.5));
		transition: all 0.3s ease;
		cursor: default;
	}
	
	.about-section .section-title:hover {
		filter: drop-shadow(0 8px 25px rgba(212, 175, 55, 0.8));
		transform: scale(1.02);
		animation-duration: 2s, 3s;
	}
	
	.about-section .section-title::after {
		content: '';
		position: absolute;
		bottom: -15px;
		left: 50%;
		transform: translateX(-50%);
		width: 120px;
		height: 2px;
		background: linear-gradient(90deg, transparent, #ffd700, #d4af37, #ffd700, transparent);
		background-size: 200% 100%;
		box-shadow: 
			0 0 20px rgba(212, 175, 55, 0.7),
			0 0 40px rgba(255, 215, 0, 0.3);
		animation: shimmer-line 3s ease-in-out infinite, pulse-line 2s ease-in-out infinite;
	}
	
	.about-section .section-title::before {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		background: radial-gradient(ellipse, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
		z-index: -1;
		border-radius: 50%;
		animation: subtle-glow 3s ease-in-out infinite;
	}
	
	@keyframes subtle-glow {
		0%, 100% { 
			opacity: 0.6; 
			transform: translate(-50%, -50%) scale(1);
		}
		50% { 
			opacity: 1; 
			transform: translate(-50%, -50%) scale(1.1);
		}
	}
	
	@keyframes shimmer-title {
		0% { 
			background-position: 0% 50%;
		}
		50% { 
			background-position: 100% 50%;
		}
		100% { 
			background-position: 0% 50%;
		}
	}
	
	@keyframes float-title {
		0%, 100% { 
			transform: translateY(0px);
		}
		50% { 
			transform: translateY(-3px);
		}
	}
	
	@keyframes shimmer-line {
		0% { 
			background-position: -200% 0%;
		}
		100% { 
			background-position: 200% 0%;
		}
	}
	
	@keyframes pulse-line {
		0%, 100% { 
			opacity: 0.8;
			transform: translateX(-50%) scaleX(1);
		}
		50% { 
			opacity: 1;
			transform: translateX(-50%) scaleX(1.05);
		}
	}

	.about-section .section-subtitle {
		color: rgba(255, 255, 255, 0.7);
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		position: relative;
		z-index: 2;
	}

	.about-text {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.about-card {
		background: rgba(0, 0, 0, 0.4);
		padding: 2.5rem;
		border-radius: 20px;
		text-align: center;
		transition: all 0.4s ease;
		border: 1px solid rgba(212, 175, 55, 0.2);
		backdrop-filter: blur(15px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}

	.about-card:hover {
		transform: translateY(-10px);
		border-color: var(--accent-color);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
	}
	.year-badge {
