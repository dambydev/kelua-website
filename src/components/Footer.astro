<style>
  .footer {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
  }

  .footer-content {
    padding: 60px 0 40px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 40px;
  }

  .footer-brand .logo {
    margin-bottom: 20px;
  }

  .logo-text {
    font-size: 2rem;
    font-weight: 700;
    background: linear-gradient(45deg, #d4af37, #CFB53B);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .brand-description {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 8px;
    color: #d4af37;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: #d4af37;
    color: #1a1a1a;
    transform: translateY(-2px);
  }

  .footer-section h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #d4af37;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
    color: #ccc;
  }

  .contact-item svg {
    flex-shrink: 0;
    color: #d4af37;
  }

  .contact-item a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-item a:hover {
    color: #d4af37;
  }

  .schedule-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
    color: #ccc;
  }

  .schedule-item .day {
    font-weight: 500;
  }

  .schedule-item .time {
    text-align: right;
    line-height: 1.4;
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 10px;
  }

  .footer-links a {
    color: #ccc;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer-links a:hover {
    color: #d4af37;
    transform: translateX(4px);
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding: 20px 0;
    background: #111;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: #999;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-content {
      padding: 40px 0 30px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .brand-description {
      max-width: none;
    }

    .social-links {
      justify-content: center;
    }

    .schedule-item {
      flex-direction: column;
      text-align: center;
      gap: 4px;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 8px;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .footer-content {
      padding: 30px 0 20px;
    }

    .footer-grid {
      gap: 25px;
    }

    .logo-text {
      font-size: 1.8rem;
    }
  }
</style>
