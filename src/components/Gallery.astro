---
// Gallery Section Component
---

<section id="gallery" class="gallery-section">	<div class="container">
		<div class="section-header scroll-animate">
			<h2 class="section-title">Le Nostre Collezioni</h2>
			<div class="section-divider"></div>
			<p class="section-subtitle">Scopri la qualit√† e l'eleganza dei nostri capi</p>
		</div>
		
		<div class="gallery-grid">
			<div class="gallery-item gallery-large scroll-animate" data-delay="0.1">
				<img src="/abiti-cerimonia-eleganti.png" alt="Abiti da Cerimonia Eleganti" class="gallery-photo">
				<div class="gallery-overlay">
					<h3>Abiti da Cerimonia</h3>
					<p>Eleganza per ogni occasione speciale</p>
				</div>
			</div>
			
			<div class="gallery-item scroll-animate" data-delay="0.2">
				<img src="/abbigliamento-sportivo.png" alt="Abbigliamento Sportivo" class="gallery-photo">
				<div class="gallery-overlay">
					<h3>Sportswear</h3>
					<p>Comfort e stile</p>
				</div>
			</div>
			
			<div class="gallery-item scroll-animate" data-delay="0.3">
				<img src="/fotoAbitoManica.png" alt="Dettagli Sartoriali" class="gallery-photo">
				<div class="gallery-overlay">
					<h3>Dettagli Sartoriali</h3>
					<p>Cura artigianale</p>
				</div>
			</div>
			
			<div class="gallery-item gallery-wide">
				<img src="/abiti-cerimonia-1.png" alt="Collezione Cerimonia" class="gallery-photo">
				<div class="gallery-overlay">
					<h3>Collezione Premium</h3>
					<p>Per i tuoi momenti importanti</p>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.gallery-section {
		padding: 100px 0;
		background: var(--light-gray);
		position: relative;
		scroll-margin-top: 120px;
	}

	.gallery-section .section-title {
		color: var(--text-dark);
	}

	.gallery-section .section-subtitle {
		color: var(--text-light);
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
		margin-top: 3rem;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	.gallery-item {
		position: relative;
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		transition: all 0.4s ease;
		background: var(--white);
		height: 300px;
	}

	.gallery-item.gallery-large {
		grid-column: span 2;
		height: 400px;
	}

	.gallery-item.gallery-wide {
		grid-column: span 2;
		height: 250px;
	}

	.gallery-photo {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}

	.gallery-item:hover {
		transform: translateY(-10px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
	}

	.gallery-item:hover .gallery-photo {
		transform: scale(1.05);
	}

	.gallery-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: white;
		padding: 2rem;
		transform: translateY(100%);
		transition: transform 0.4s ease;
	}

	.gallery-item:hover .gallery-overlay {
		transform: translateY(0);
	}

	.gallery-overlay h3 {
		font-family: 'Playfair Display', serif;
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		color: var(--accent-light);
	}

	.gallery-overlay p {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.gallery-section {
			padding: 80px 0;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
			gap: 15px;
		}

		.gallery-item.gallery-large,
		.gallery-item.gallery-wide {
			grid-column: auto;
			height: 250px;
		}

		.gallery-overlay {
			padding: 1.5rem;
		}

		.gallery-overlay h3 {
			font-size: 1.3rem;
		}
	}

	@media (max-width: 480px) {
		.gallery-item {
			height: 200px;
		}

		.gallery-overlay {
			padding: 1rem;
		}

		.gallery-overlay h3 {
			font-size: 1.2rem;
		}
	}
</style>
