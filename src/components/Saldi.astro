---
// Saldi Section Component
import { getCollection } from 'astro:content';

// Per ora uso dati di esempio, poi integreremo con CMS
const saldi = [
  {
    id: 1,
    titolo: "Saldi Invernali",
    sottotitolo: "Fino al 50% di sconto",
    descrizione: "Scopri la nostra selezione di abiti da cerimonia e sportswear in promozione",
    sconto: "50%",
    validoFino: "31 Marzo 2025",
    immagine: "/abiti-cerimonia-1.png",
    link: "#gallery",
    attivo: true
  },
  {
    id: 2,
    titolo: "Offerta Primavera",
    sottotitolo: "Nuova collezione",
    descrizione: "Abiti eleganti per la stagione primavera-estate con sconti speciali",
    sconto: "30%",
    validoFino: "30 Aprile 2025",
    immagine: "/abiti-cerimonia-eleganti.png",
    link: "#gallery",
    attivo: true
  }
];

const saldiAttivi = saldi.filter(sale => sale.attivo);
---

{saldiAttivi.length > 0 && (
  <section id="saldi" class="saldi-section">
    <div class="container">
      <div class="saldi-header scroll-animate">
        <h2>ðŸ”¥ Offerte Speciali</h2>
        <p>Non perdere le nostre promozioni esclusive</p>
      </div>

      <div class="saldi-grid">
        {saldiAttivi.map((sale, index) => (
          <div class="saldi-card scroll-animate" data-delay={`${index * 0.2}`}>
            <div class="saldi-image">
              <img src={sale.immagine} alt={sale.titolo} />
              <div class="sconto-badge">
                <span>-{sale.sconto}</span>
              </div>
            </div>
            
            <div class="saldi-content">
              <div class="saldi-text">
                <h3>{sale.titolo}</h3>
                <h4>{sale.sottotitolo}</h4>
                <p>{sale.descrizione}</p>
                
                <div class="saldi-meta">
                  <div class="valido-fino">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>Valido fino al {sale.validoFino}</span>
                  </div>
                </div>
              </div>
              
              <div class="saldi-action">
                <a href={sale.link} class="btn-saldi">
                  <span>Scopri l'Offerta</span>
                  <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .saldi-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #0d0d0d 100%);
    position: relative;
  }

  .saldi-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .saldi-header {
    text-align: center;
    margin-bottom: 60px;
    color: white;
  }

  .saldi-header h2 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 16px;
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .saldi-header p {
    font-size: 1.2rem;
    color: #ccc;
    max-width: 600px;
    margin: 0 auto;
  }

  .saldi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
    align-items: start;
  }

  .saldi-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s ease;
    position: relative;
  }

  .saldi-card:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(212, 175, 55, 0.4);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  }

  .saldi-image {
    position: relative;
    height: 300px;
    overflow: hidden;
  }

  .saldi-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .saldi-card:hover .saldi-image img {
    transform: scale(1.05);
  }

  .sconto-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 12px 20px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
    animation: pulse-badge 2s infinite;
  }

  @keyframes pulse-badge {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .saldi-content {
    padding: 30px;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .saldi-text h3 {
    font-size: 1.8rem;
    font-weight: 600;
    color: #f1c40f;
    margin-bottom: 8px;
  }

  .saldi-text h4 {
    font-size: 1.3rem;
    font-weight: 400;
    color: #d4af37;
    margin-bottom: 16px;
  }

  .saldi-text p {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .saldi-meta {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .valido-fino {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #f39c12;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .btn-saldi {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: linear-gradient(45deg, #d4af37, #f1c40f);
    color: #1a1a1a;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .btn-saldi:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(212, 175, 55, 0.4);
    background: linear-gradient(45deg, #f1c40f, #d4af37);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .saldi-section {
      padding: 60px 0;
    }

    .saldi-header h2 {
      font-size: 2.2rem;
    }

    .saldi-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .saldi-card {
      margin: 0 10px;
    }

    .saldi-image {
      height: 250px;
    }

    .saldi-content {
      padding: 20px;
    }

    .saldi-text h3 {
      font-size: 1.5rem;
    }

    .btn-saldi {
      padding: 14px 24px;
      font-size: 1rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .saldi-card {
      transition: none;
    }

    .saldi-card:hover {
      transform: none;
    }

    .sconto-badge {
      animation: none;
    }
  }
</style>
