<style>	.navbar {
		background: rgba(0, 0, 0, 0.85);
		backdrop-filter: blur(20px) saturate(180%);
		-webkit-backdrop-filter: blur(20px) saturate(180%);
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 9999;
		padding: 1rem 0;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.4),
			0 2px 8px rgba(212, 175, 55, 0.2),
			inset 0 1px 0 rgba(255, 255, 255, 0.1);
		transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
		border-bottom: 1px solid rgba(212, 175, 55, 0.3);
		will-change: transform, background;
	}	.nav-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 20px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 70px;
		position: relative;
	}

	.nav-brand {
		display: flex;
		align-items: center;
		gap: 15px;
		flex-shrink: 0;
		z-index: 10;
	}

	.logo {
		height: 50px;
		width: auto;
		border-radius: 50%;
		box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
		transition: all 0.4s ease;
	}
	
	.logo:hover {
		transform: rotate(10deg) scale(1.05);
		box-shadow: 0 6px 20px rgba(212, 175, 55, 0.6);
	}

	.brand-name {
		font-family: 'Glida Display Regular', 'Playfair Display', serif;
		font-size: 2.2rem;
		font-weight: 400;
		background: linear-gradient(135deg, #d4af37 0%, #CFB53B 50%, #d4af37 100%);
		background-size: 200% 200%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
		letter-spacing: 1px;
		animation: shimmer 3s ease-in-out infinite;
	}

	@keyframes shimmer {
		0%, 100% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 1rem;
		margin: 0;
		padding: 0;
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
	}

	.nav-item {
		position: relative;
	}

	.nav-link {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 4px;
		color: white;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		padding: 12px 20px;
		border-radius: 12px;
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		overflow: hidden;
	}

	.nav-link::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.6s ease;
	}

	.nav-link:hover::before {
		left: 100%;
	}

	.nav-icon {
		font-size: 1.2rem;
		transition: all 0.3s ease;
	}

	.nav-text {
		font-size: 0.85rem;
		letter-spacing: 0.5px;
		text-transform: uppercase;
	}

	.nav-link:hover {
		transform: translateY(-2px);
		background: rgba(212, 175, 55, 0.2);
		border-color: rgba(212, 175, 55, 0.4);
		box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
		color: #d4af37;
	}

	.nav-link:hover .nav-icon {
		transform: scale(1.2);
	}

	/* Stili specifici per ogni link */
	.home-link:hover {
		background: rgba(52, 152, 219, 0.2);
		border-color: rgba(52, 152, 219, 0.4);
		box-shadow: 0 8px 25px rgba(52, 152, 219, 0.3);
		color: #3498db;
	}

	.about-link:hover {
		background: rgba(155, 89, 182, 0.2);
		border-color: rgba(155, 89, 182, 0.4);
		box-shadow: 0 8px 25px rgba(155, 89, 182, 0.3);
		color: #9b59b6;
	}

	.contact-link:hover {
		background: rgba(46, 204, 113, 0.2);
		border-color: rgba(46, 204, 113, 0.4);
		box-shadow: 0 8px 25px rgba(46, 204, 113, 0.3);
		color: #2ecc71;
	}
	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(45deg, #d4af37, #CFB53B);
		transition: width 0.3s ease;
	}

	.nav-link:hover::after,
	.nav-link.active::after {
		width: 100%;
	}

	.nav-link:hover {
		color: #CFB53B;
	}
	.saldi-link {
		background: linear-gradient(145deg, rgba(231, 76, 60, 0.3), rgba(192, 57, 43, 0.3)) !important;
		border: 1px solid rgba(231, 76, 60, 0.5) !important;
		color: #e74c3c !important;
		position: relative;
		animation: pulse-saldi 3s infinite;
	}

	.saldi-link::after {
		content: '';
		position: absolute;
		top: -2px;
		right: -2px;
		width: 8px;
		height: 8px;
		background: #e74c3c;
		border-radius: 50%;
		animation: pulse-dot 2s infinite;
	}

	.saldi-link:hover {
		background: linear-gradient(145deg, rgba(231, 76, 60, 0.5), rgba(192, 57, 43, 0.5)) !important;
		border-color: #e74c3c !important;
		box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4) !important;
		color: #ff6b47 !important;
		transform: translateY(-3px) scale(1.05);
	}

	@keyframes pulse-saldi {
		0%, 100% { 
			box-shadow: 0 0 0 0 rgba(231, 76, 60, 0.4);
		}
		50% { 
			box-shadow: 0 0 0 15px rgba(231, 76, 60, 0);
		}
	}

	@keyframes pulse-dot {
		0%, 100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.5);
			opacity: 0.7;
		}
	}

	.hamburger {
		display: none;
		flex-direction: column;
		cursor: pointer;
	}
	.bar {
		width: 25px;
		height: 3px;
		background: linear-gradient(45deg, #CFB53B, #d4af37);
		margin: 3px 0;
		transition: 0.3s;
		border-radius: 2px;
	}	.nav-actions {
		display: flex;
		align-items: center;
		gap: 16px;
		flex-shrink: 0;
		z-index: 10;
	}

	.nav-contact-btn {
		display: flex;
		align-items: center;
		gap: 8px;
		padding: 12px 18px;
		border-radius: 12px;
		text-decoration: none;
		font-size: 0.9rem;
		font-weight: 600;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid transparent;
		white-space: nowrap;
		position: relative;
		overflow: hidden;
	}

	.nav-contact-btn::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.6s ease;
	}

	.nav-contact-btn:hover::before {
		left: 100%;
	}

	.phone-btn {
		background: linear-gradient(145deg, #d4af37, #CFB53B);
		color: #1a1a1a;
		box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
		border: 1px solid rgba(212, 175, 55, 0.5);
	}

	.phone-btn:hover {
		background: linear-gradient(145deg, #f1c40f, #d4af37);
		transform: translateY(-3px) scale(1.05);
		box-shadow: 0 10px 30px rgba(212, 175, 55, 0.5);
		color: #000;
	}

	.whatsapp-btn {
		background: linear-gradient(145deg, #25d366, #128c7e);
		color: white;
		box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3);
		border: 1px solid rgba(37, 211, 102, 0.5);
		position: relative;
	}

	.whatsapp-btn::after {
		content: '';
		position: absolute;
		top: -2px;
		right: -2px;
		width: 8px;
		height: 8px;
		background: #00ff88;
		border-radius: 50%;
		animation: pulse-dot 2s infinite;
	}
	.whatsapp-btn:hover {
		background: linear-gradient(145deg, #00ff88, #25d366);
		transform: translateY(-3px) scale(1.05);
		box-shadow: 0 10px 30px rgba(37, 211, 102, 0.5);
		color: white;
	}/* Responsive Design */
	@media (max-width: 992px) {
		.nav-menu {
			position: static;
			transform: none;
			gap: 0.5rem;
		}
		
		.nav-link {
			padding: 8px 12px;
			font-size: 0.8rem;
		}
		
		.nav-icon {
			font-size: 1rem;
		}
		
		.nav-text {
			font-size: 0.75rem;
		}
	}

	@media (max-width: 768px) {
		.hamburger {
			display: flex;
		}

		.nav-menu {
			position: fixed;
			left: -100%;
			top: 90px;
			flex-direction: column;
			background: rgba(0, 0, 0, 0.96);
			backdrop-filter: blur(20px);
			width: 100%;
			text-align: center;
			transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
			padding: 3rem 0;
			border-top: 2px solid rgba(212, 175, 55, 0.3);
			transform: translateX(0);
		}

		.nav-menu.active {
			left: 0;
		}

		.nav-item {
			margin: 1.5rem 0;
		}

		.nav-link {
			padding: 16px 24px;
			margin: 0 20px;
			background: rgba(255, 255, 255, 0.08);
			border: 1px solid rgba(255, 255, 255, 0.15);
		}

		.nav-actions {
			display: none;
		}

		.brand-name {
			font-size: 1.8rem;
		}

		.logo {
			height: 40px;
		}

		.nav-container {
			height: 80px;
		}
	}

	@media (max-width: 480px) {
		.nav-container {
			padding: 0 15px;
			height: 70px;
		}

		.brand-name {
			font-size: 1.5rem;
		}

		.logo {
			height: 35px;
		}

		.nav-menu {
			top: 80px;
			padding: 2rem 0;
		}

		.nav-link {
			margin: 0 15px;
			padding: 14px 20px;
		}

		.nav-icon {
			font-size: 1.1rem;
		}

		.nav-text {
			font-size: 0.8rem;
		}
	}
</style>

<script>
	// Mobile menu toggle
	document.addEventListener('DOMContentLoaded', () => {
		const hamburger = document.getElementById('hamburger');
		const navMenu = document.getElementById('nav-menu');

		if (hamburger && navMenu) {
			hamburger.addEventListener('click', () => {
				navMenu.classList.toggle('active');
			});

			// Close menu when clicking on a link
			document.querySelectorAll('.nav-link').forEach(link => {
				link.addEventListener('click', () => {
					navMenu.classList.remove('active');
				});
			});
		}

		// Gestione navigazione intelligente
		document.querySelectorAll('.nav-link').forEach(link => {
			link.addEventListener('click', function (e) {
				const href = this.getAttribute('href');
				
				// Se √® un link a una sezione della homepage
				if (href.includes('#')) {
					const currentPage = window.location.pathname;
					
					// Se siamo gi√† sulla homepage, usa smooth scroll
					if (currentPage === '/' || currentPage === '') {
						e.preventDefault();
						const targetId = href.split('#')[1];
						const target = document.getElementById(targetId);
						if (target) {
							const offsetTop = target.offsetTop - 120;
							window.scrollTo({
								top: offsetTop,
								behavior: 'smooth'
							});
						}
					}
					// Se siamo su altra pagina, il browser navigher√† automaticamente
					// alla homepage con l'hash
				}
			});
		});
	});
</script>
