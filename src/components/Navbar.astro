---
// Modern Navbar Component - Completamente ridisegnato
import { getEntry } from 'astro:content';

const currentPath = Astro.url.pathname;
const isHomepage = currentPath === '/' || currentPath === '';
const homePrefix = isHomepage ? '' : '/';

// Carica le impostazioni dei saldi
const saldiSettings = await getEntry('saldi-settings', 'saldi-settings');
const saldiAttivi = saldiSettings?.data?.saldiAttivi === true;
---

<nav class="modern-navbar">
  <div class="navbar-container">
    <!-- Logo Section -->
    <div class="navbar-brand">
      <a href="/" class="brand-link">
        <div class="logo-container">
          <img src="/logo.jpg" alt="Kelua" class="brand-logo">
          <div class="brand-glow"></div>
        </div>
        <span class="brand-text">KELUA</span>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="desktop-nav">
      <a href={homePrefix + "#home"} class="nav-item">Home</a>
      <a href={homePrefix + "#chi-siamo"} class="nav-item">Chi Siamo</a>
      <a href={homePrefix + "#contatti"} class="nav-item">Contatti</a>
      {saldiAttivi && (
        <a href="/saldi" class="nav-item nav-item-special">Saldi</a>
      )}
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn">
      <span class="menu-line"></span>
      <span class="menu-line"></span>
      <span class="menu-line"></span>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu-overlay" id="mobileMenuOverlay">
    <div class="mobile-menu">
      <div class="mobile-menu-header">
        <span class="mobile-menu-title">Menu</span>
        <button class="mobile-menu-close" id="mobileMenuClose">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="mobile-menu-content">
        <a href={homePrefix + "#home"} class="mobile-nav-item">
          <span class="mobile-nav-text">Home</span>
        </a>
        <a href={homePrefix + "#chi-siamo"} class="mobile-nav-item">
          <span class="mobile-nav-text">Chi Siamo</span>
        </a>
        <a href={homePrefix + "#contatti"} class="mobile-nav-item">
          <span class="mobile-nav-text">Contatti</span>
        </a>
        {saldiAttivi && (
          <a href="/saldi" class="mobile-nav-item mobile-nav-special">
            <span class="mobile-nav-text">Saldi</span>
            <span class="mobile-nav-badge">HOT</span>
          </a>
        )}
      </div>

      <div class="mobile-menu-footer">
        <div class="mobile-contact-grid">
          <a href="tel:0882302070" class="mobile-contact-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>Chiama</span>
          </a>
          <a href="https://wa.me/393272271295?text=Ciao%20Kelua!%20Vorrei%20maggiori%20informazioni." target="_blank" class="mobile-contact-btn whatsapp">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <span>WhatsApp</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
/* Modern Navbar Styles - Completamente nuovo */
.modern-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-navbar:hover {
  background: rgba(0, 0, 0, 0.95);
  border-bottom-color: rgba(255, 215, 0, 0.4);
}

.navbar-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80px;
}

/* Brand Section */
.navbar-brand {
  flex-shrink: 0;
}

.brand-link {
  display: flex;
  align-items: center;
  gap: 12px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.brand-link:hover {
  transform: translateY(-2px);
}

.logo-container {
  position: relative;
  width: 50px;
  height: 50px;
}

.brand-logo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  transition: all 0.4s ease;
  box-shadow: 0 4px 20px rgba(255, 215, 0, 0.3);
}

.brand-glow {
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  border-radius: 50%;
  background: linear-gradient(45deg, #ffd700, #ffed4e, #ffd700);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
  animation: rotate 3s linear infinite;
}

.brand-link:hover .brand-glow {
  opacity: 1;
}

.brand-link:hover .brand-logo {
  transform: scale(1.1);
  box-shadow: 0 8px 30px rgba(255, 215, 0, 0.5);
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.brand-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: #ffd700;
  letter-spacing: 2px;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
  transition: all 0.3s ease;
}

.brand-link:hover .brand-text {
  color: #ffed4e;
  text-shadow: 0 0 20px rgba(255, 215, 0, 0.8);
}

/* Desktop Navigation */
.desktop-nav {
  display: flex;
  align-items: center;
  gap: 40px;
}

.nav-item {
  position: relative;
  color: white;
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  padding: 12px 20px;
  border-radius: 25px;
  transition: all 0.3s ease;
  background: transparent;
  border: 2px solid transparent;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 215, 0, 0.1), transparent);
  border-radius: 25px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.nav-item:hover::before {
  opacity: 1;
}

.nav-item:hover {
  color: #ffd700;
  border-color: rgba(255, 215, 0, 0.5);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255, 215, 0, 0.2);
}

.nav-item-special {
  background: linear-gradient(45deg, #ff6b47, #ff8e53);
  color: white !important;
  border-color: #ff6b47;
  animation: pulse-special 2s infinite;
}

.nav-item-special:hover {
  background: linear-gradient(45deg, #ff8e53, #ff6b47);
  border-color: #ff8e53;
  color: white !important;
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 8px 25px rgba(255, 107, 71, 0.4);
}

@keyframes pulse-special {
  0%, 100% { box-shadow: 0 0 0 0 rgba(255, 107, 71, 0.4); }
  50% { box-shadow: 0 0 0 8px rgba(255, 107, 71, 0); }
}

/* Mobile Menu Button */
.mobile-menu-btn {
  display: none;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  background: rgba(255, 215, 0, 0.1);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.mobile-menu-btn:hover {
  background: rgba(255, 215, 0, 0.2);
  border-color: rgba(255, 215, 0, 0.5);
  transform: scale(1.05);
}

.menu-line {
  width: 24px;
  height: 3px;
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  margin: 2px 0;
  border-radius: 2px;
  transition: all 0.3s ease;
}

.mobile-menu-btn.active .menu-line:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-menu-btn.active .menu-line:nth-child(2) {
  opacity: 0;
}

.mobile-menu-btn.active .menu-line:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(20px);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-menu-overlay.active {
  opacity: 1;
  visibility: visible;
}

.mobile-menu {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 400px;
  height: 100vh;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.95), rgba(26, 26, 26, 0.9));
  backdrop-filter: blur(30px);
  border-left: 3px solid rgba(255, 215, 0, 0.5);
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.mobile-menu-overlay.active .mobile-menu {
  transform: translateX(0);
}

.mobile-menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
  background: rgba(255, 215, 0, 0.05);
}

.mobile-menu-title {
  font-size: 1.3rem;
  font-weight: 600;
  color: #ffd700;
  letter-spacing: 1px;
}

.mobile-menu-close {
  width: 40px;
  height: 40px;
  background: rgba(255, 215, 0, 0.1);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 8px;
  color: #ffd700;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mobile-menu-close:hover {
  background: rgba(255, 215, 0, 0.2);
  border-color: rgba(255, 215, 0, 0.5);
  transform: rotate(90deg);
}

.mobile-menu-content {
  flex: 1;
  padding: 30px 25px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.mobile-nav-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 25px;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid transparent;
  border-radius: 15px;
  color: white;
  text-decoration: none;
  font-weight: 500;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  transform: translateX(50px);
  opacity: 0;
  animation: slideInMobile 0.5s ease-out forwards;
}

.mobile-nav-item:nth-child(1) { animation-delay: 0.1s; }
.mobile-nav-item:nth-child(2) { animation-delay: 0.2s; }
.mobile-nav-item:nth-child(3) { animation-delay: 0.3s; }
.mobile-nav-item:nth-child(4) { animation-delay: 0.4s; }

@keyframes slideInMobile {
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.mobile-nav-item:hover {
  background: rgba(255, 215, 0, 0.1);
  border-color: rgba(255, 215, 0, 0.3);
  color: #ffd700;
  transform: translateX(10px);
}

.mobile-nav-text {
  font-size: 1.1rem;
  letter-spacing: 0.5px;
}

.mobile-nav-special {
  background: linear-gradient(45deg, rgba(255, 107, 71, 0.2), rgba(255, 142, 83, 0.2));
  border-color: rgba(255, 107, 71, 0.4);
  color: #ff6b47 !important;
}

.mobile-nav-special:hover {
  background: linear-gradient(45deg, rgba(255, 107, 71, 0.3), rgba(255, 142, 83, 0.3));
  border-color: rgba(255, 107, 71, 0.6);
  color: #ff8e53 !important;
}

.mobile-nav-badge {
  background: linear-gradient(45deg, #ff6b47, #ff8e53);
  color: white;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-5px); }
  60% { transform: translateY(-3px); }
}

.mobile-menu-footer {
  padding: 25px;
  border-top: 1px solid rgba(255, 215, 0, 0.2);
  background: rgba(255, 215, 0, 0.05);
}

.mobile-contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.mobile-contact-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 15px 20px;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  color: white;
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.mobile-contact-btn:hover {
  background: rgba(255, 215, 0, 0.1);
  border-color: rgba(255, 215, 0, 0.3);
  color: #ffd700;
  transform: translateY(-2px);
}

.mobile-contact-btn.whatsapp:hover {
  background: rgba(37, 211, 102, 0.2);
  border-color: rgba(37, 211, 102, 0.4);
  color: #25d366;
}

/* Responsive Design */
@media (max-width: 768px) {
  .desktop-nav {
    display: none;
  }
  
  .mobile-menu-btn {
    display: flex;
  }
  
  .navbar-container {
    height: 70px;
  }
  
  .brand-text {
    font-size: 1.3rem;
  }
  
  .logo-container {
    width: 45px;
    height: 45px;
  }
}

@media (max-width: 480px) {
  .navbar-container {
    padding: 0 15px;
    height: 65px;
  }
  
  .brand-text {
    font-size: 1.1rem;
  }
  
  .logo-container {
    width: 40px;
    height: 40px;
  }
  
  .mobile-menu {
    width: 100%;
  }
  
  .mobile-contact-grid {
    grid-template-columns: 1fr;
  }
}

/* Scroll Effects */
.modern-navbar.scrolled {
  background: rgba(0, 0, 0, 0.95);
  border-bottom-color: rgba(255, 215, 0, 0.6);
  box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
}

.modern-navbar.scrolled .navbar-container {
  height: 65px;
}

.modern-navbar.scrolled .brand-logo {
  box-shadow: 0 6px 25px rgba(255, 215, 0, 0.4);
}
</style>

<script>
// Modern Navbar JavaScript
document.addEventListener('DOMContentLoaded', () => {
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  const navbar = document.querySelector('.modern-navbar');

  // Mobile menu toggle
  if (mobileMenuBtn && mobileMenuOverlay) {
    // Open mobile menu
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenuOverlay.classList.add('active');
      mobileMenuBtn.classList.add('active');
      document.body.style.overflow = 'hidden';
    });

    // Close mobile menu
    if (mobileMenuClose) {
      mobileMenuClose.addEventListener('click', () => {
        mobileMenuOverlay.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    // Close menu when clicking overlay
    mobileMenuOverlay.addEventListener('click', (e) => {
      if (e.target === mobileMenuOverlay) {
        mobileMenuOverlay.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
        document.body.style.overflow = '';
      }
    });

    // Close menu when clicking nav items
    document.querySelectorAll('.mobile-nav-item').forEach(item => {
      item.addEventListener('click', () => {
        mobileMenuOverlay.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
  }

  // Scroll effects
  if (navbar) {
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      lastScrollY = currentScrollY;
    });
  }

  // Smart navigation for anchor links
  document.querySelectorAll('.nav-item, .mobile-nav-item').forEach(link => {
    link.addEventListener('click', function (e) {
      const href = this.getAttribute('href');
      
      if (href && href.includes('#')) {
        const currentPage = window.location.pathname;
        
        if (currentPage === '/' || currentPage === '') {
          e.preventDefault();
          const targetId = href.split('#')[1];
          const target = document.getElementById(targetId);
          
          if (target) {
            const offsetTop = target.offsetTop - 100;
            window.scrollTo({
              top: offsetTop,
              behavior: 'smooth'
            });
          }
        }
      }
    });
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenuOverlay?.classList.contains('active')) {
      mobileMenuOverlay.classList.remove('active');
      mobileMenuBtn?.classList.remove('active');
      document.body.style.overflow = '';
    }
  });
});
</script>
