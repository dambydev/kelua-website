<style>
  .footer {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
  }

  .footer-content {
    padding: 60px 0 40px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1.2fr 1.3fr 1fr;
    gap: 40px;
    align-items: start;
  }

  .footer-brand .logo {
    margin-bottom: 20px;
  }

  .footer-brand .logo-footer {
    display: flex;
    align-items: center;
    gap: 14px;
    margin-bottom: 20px;
  }

  .footer-logo-img {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 4px 20px rgba(255, 215, 0, 0.2);
    border: 2px solid rgba(255, 215, 0, 0.6);
  }

  .logo-text-footer {
    font-family: 'Glida Display Regular', 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 300;
    background: linear-gradient(135deg, #ddbb76 0%, #e6c88a 50%, #ddbb76 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmerText 6s var(--ease-luxury) infinite;
    filter: drop-shadow(0 0 8px rgba(255, 215, 0, 0.3));
    letter-spacing: 4px;
  }

  @keyframes shimmerText {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .brand-description {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: rgba(255, 215, 0, 0.1);
    border: 2px solid rgba(221, 187, 118, 0.3);
    border-radius: 12px;
    color: #ddbb76;
    transition: all 0.4s var(--ease-luxury);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .social-links a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .social-links a:hover::before {
    left: 100%;
  }

  .social-links a:hover {
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
  }

  .social-links a.facebook:hover {
    background: #1877f2;
    border-color: #1877f2;
    color: white;
  }

  .social-links a.instagram:hover {
    background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    border-color: #e6683c;
    color: white;
  }

  .social-links a.tiktok:hover {
    background: #000;
    border-color: #ff0050;
    color: #ff0050;
  }

  .social-tooltip {
    position: absolute;
    bottom: 120%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 215, 0, 0.3);
    z-index: 1000;
  }

  .social-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: rgba(0, 0, 0, 0.9);
  }

  .social-links a:hover .social-tooltip {
    opacity: 1;
    visibility: visible;
    bottom: 130%;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-section h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #ffd700;
    text-shadow: 0 0 6px rgba(255, 215, 0, 0.3);
  }

  .stores-section {
    margin-bottom: 15px;
  }

  .store-item {
    margin-bottom: 12px;
    padding: 8px 0;
  }

  .store-item:last-child {
    margin-bottom: 0;
  }

  .store-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;
  }

  .store-header svg {
    flex-shrink: 0;
    color: #ffd700;
  }

  .store-label {
    color: #ffd700;
    font-weight: 600;
    font-size: 0.85rem;
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.3);
  }

  .store-details {
    margin-left: 24px;
  }

  .store-address {
    color: #ccc;
    font-size: 0.9rem;
    line-height: 1.4;
    display: block;
    margin-bottom: 8px;
  }

  .footer-directions-btn {
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 6px;
    padding: 4px 10px;
    color: #ffd700;
    font-size: 0.7rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s var(--ease-luxury);
    display: inline-flex;
    align-items: center;
    gap: 4px;
    backdrop-filter: blur(10px);
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.3);
  }

  .footer-directions-btn:hover {
    background: rgba(255, 215, 0, 0.2);
    border-color: rgba(255, 215, 0, 0.5);
    transform: translateY(-1px);
    box-shadow: 0 4px 10px rgba(255, 215, 0, 0.3);
  }



  .contact-item {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 15px;
    color: #ccc;
    padding: 2px 0;
  }

  .contact-item svg {
    flex-shrink: 0;
    color: #ffd700;
  }

  .contact-item a {
    color: #ccc;
    text-decoration: none;
    transition: all 0.3s var(--ease-luxury);
  }

  .contact-item a:hover {
    color: #ffd700;
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.4);
  }

  .schedule {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .schedule-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    align-items: start;
    color: #ccc;
    padding: 8px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .schedule-item:last-child {
    border-bottom: none;
  }

  .day-column {
    display: flex;
    align-items: flex-start;
  }

  .schedule-item .day {
    font-weight: 500;
    font-size: 0.9rem;
    line-height: 1.3;
    white-space: nowrap;
  }

  .time-column {
    display: flex;
    flex-direction: column;
    gap: 4px;
    text-align: right;
  }

  .schedule-item .time {
    font-size: 0.9rem;
    line-height: 1.3;
    color: rgba(255, 255, 255, 0.9);
  }

  .schedule-item .time.closed {
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-links a {
    color: #ccc;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    padding: 2px 0;
  }

  .footer-links a:hover {
    color: #ffd700;
    transform: translateX(4px);
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.4);
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding: 20px 0;
    background: #111;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: #999;
  }

  .design-credit {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .dambystudio-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #999;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 4px 8px;
    border-radius: 6px;
  }

  .dambystudio-link:hover {
    color: #ffd700;
    background: rgba(255, 215, 0, 0.1);
    transform: translateY(-1px);
    text-shadow: 0 0 4px rgba(255, 215, 0, 0.4);
  }

  .dambystudio-logo {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    transition: transform 0.3s ease;
  }

  .dambystudio-link:hover .dambystudio-logo {
    transform: scale(1.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-content {
      padding: 40px 0 30px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .brand-description {
      max-width: none;
    }

    .social-links {
      justify-content: center;
    }

    .schedule-item {
      grid-template-columns: 1fr;
      gap: 8px;
      text-align: center;
      padding: 12px 0;
    }

    .day-column {
      justify-content: center;
    }

    .time-column {
      text-align: center;
    }

    .store-details {
      margin-left: 0;
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 8px;
      text-align: center;
    }

    .design-credit {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .footer-content {
      padding: 30px 0 20px;
    }

    .footer-grid {
