const categorieAttive = categorieSaldi.length > 0 
  ? categorieSaldi
      .filter(cat => cat.data.attivo)
      .sort((a, b) => (a.data.ordine || 0) - (b.data.ordine || 0))
  : categorieFallback;

const prodottiDisponibili = prodottiSaldi.length > 0
  ? prodottiSaldi
