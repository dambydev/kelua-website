// Pagina Saldi Dedicata con integrazione CMS e Filtri Categoria
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection, getEntry } from 'astro:content';

// Leggi le impostazioni dei saldi
const saldiSettings = await getEntry('saldi-settings', 'saldi-settings');

// Leggi i dati dal CMS
let saldiPosts = [];
let prodottiSaldi = [];
let categorieSaldi = [];

try {
  // Prova a leggere dal CMS
  saldiPosts = await getCollection('saldi-posts');
  prodottiSaldi = await getCollection('prodotti-saldi');
  categorieSaldi = await getCollection('categorie-saldi');
} catch (error) {
  console.log('CMS non ancora configurato, uso dati di esempio');
}

// Dati delle impostazioni
const saldiAttivi = saldiSettings?.data?.saldiAttivi ?? true;
const messaggioGlobale = saldiSettings?.data?.messaggioGlobale ?? "ðŸ”¥ Saldi straordinari in corso!";
const coloreTema = saldiSettings?.data?.coloreTema ?? "#e74c3c";
const emailOrdini = saldiSettings?.data?.emailOrdini ?? "keluafashion@hotmail.it";
const telefonoOrdini = saldiSettings?.data?.telefonoOrdini ?? "0882302070";

// Fallback data se il CMS non Ã¨ ancora configurato
const saldiHeroFallback = {
  titolo: "ðŸ”¥ Saldi Straordinari",
  sottotitolo: "Scopri le nostre offerte imperdibili",
  descrizione: "Eleganza e stile con sconti fino al 70%. Approfitta delle nostre promozioni esclusive su abiti da cerimonia e sportswear di qualitÃ .",
  immagineBackground: "/background.png",
  scontoMax: "70%",
  attivo: saldiAttivi
};

// Usa i dati del CMS se disponibili, altrimenti usa i fallback
const saldiHero = saldiPosts.length > 0 
  ? saldiPosts.find(post => post.data.attivo)?.data || saldiHeroFallback
  : saldiHeroFallback;

// Statistiche dinamiche basate sui dati CMS
const numeroTotaleProdotti = prodottiSaldi.filter(p => p.data.disponibile).length;
const numeroTotaleCategorie = categorieSaldi.filter(c => c.data.attivo).length;

let scontoMassimoCalcolato = 70; // default
if (prodottiSaldi.length > 0) {
  const scontiProdotti = prodottiSaldi
    .filter(p => p.data.disponibile)
    .map(p => Math.round(((p.data.prezzoOriginale - p.data.prezzoScontato) / p.data.prezzoOriginale) * 100));
  scontoMassimoCalcolato = Math.max(...scontiProdotti, 0);
}

// Se ci sono categorie, prendi anche gli sconti delle categorie
if (categorieSaldi.length > 0) {
  const scontiCategorie = categorieSaldi
    .filter(c => c.data.attivo)
    .map(c => parseInt(c.data.sconto?.replace('%', '') || '0'));
  if (scontiCategorie.length > 0) {
    scontoMassimoCalcolato = Math.max(scontoMassimoCalcolato, ...scontiCategorie);
  }
}
