<script>
  // FunzionalitÃ  filtri categoria
  document.addEventListener('DOMContentLoaded', function() {
    const filtriBtns = document.querySelectorAll('.filtro-btn');
    const prodottiCards = document.querySelectorAll('.prodotto-card');
    
    // Funzione per filtrare i prodotti
    function filtraProdotti(categoriaTarget, genereTarget) {
      prodottiCards.forEach(card => {
        const categoriaCard = card.getAttribute('data-categoria');
        const genereCard = card.getAttribute('data-genere');
        
        let mostra = false;
        
        if (categoriaTarget === 'tutti') {
          mostra = true;
        } else {
          mostra = categoriaCard === categoriaTarget && genereCard === genereTarget;
        }
        
        if (mostra) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
      
      // Aggiorna contatori
      aggiornaContatori();
    }
    
    // Funzione per aggiornare i contatori
    function aggiornaContatori() {
      filtriBtns.forEach(btn => {
        const categoria = btn.getAttribute('data-categoria');
        const genere = btn.getAttribute('data-genere');
        const contatore = btn.querySelector('.filtro-count');
        
        let count = 0;
        if (categoria === 'tutti') {
          count = prodottiCards.length;
        } else {
          count = document.querySelectorAll(`[data-categoria="${categoria}"][data-genere="${genere}"]:not(.hidden)`).length;
        }
        
        contatore.textContent = count;
      });
    }
    
    // Event listener per i bottoni filtro
    filtriBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Rimuovi classe active da tutti i bottoni
        filtriBtns.forEach(b => b.classList.remove('active'));
        
        // Aggiungi classe active al bottone cliccato
        this.classList.add('active');
        
        // Ottieni categoria e genere target
        const categoriaTarget = this.getAttribute('data-categoria');
        const genereTarget = this.getAttribute('data-genere');
        
        // Filtra i prodotti
        filtraProdotti(categoriaTarget, genereTarget);
        
        // Animazione scroll verso i prodotti
        const prodottiSection = document.querySelector('.prodotti-saldi');
        if (prodottiSection) {
          prodottiSection.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Inizializzazione - mostra tutti i prodotti
    aggiornaContatori();
  });
</script>
